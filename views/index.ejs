<!doctype html>
<html lang="en">
  <head>
    <!-- Requerimientos-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <title>API MongoDB</title>
    <style>
        .container{
            max-width: 560px;
        }
    </style>
  </head>
  <body> 
      
    <div class="container">
        <div class="shadow-lg p-3 mb-5 bg-body rounded">
            <h2>Datos</h2>
            <form action="/crear" method="POST">
              <!-- Tabla api  -->
            <table id="tablaApi" class="table mt-4">
              <thead>
                 
                      <th style="display: none;">ID</th>
                      <th>word</th>
                      <th>dateCreated</th>
                      <th>_id  /  dateDeleted</th>
                 
              </thead>
              <tbody>
                  <% apis.forEach( (api) => { %>
                      <tr>
                          <td style="display: none;"><%= api._id %></td>
                          <td><%= api.nombre %></td>
                          <td><%= api.fecha %></td>
                          <td>
                              <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                              <a href="/borrar/<%= api._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                          </td>
                      </tr>
                  <% }) %>
              </tbody>
          </table>
  </div>
          <!-- fondo de imagen -->
         <body background="https://3dalia.com/wp-content/uploads/2018/07/Desarrollo-de-Productos-1366x768.jpg"></body>

            <!-- boton de ingresos-->
            <center><button type="submit" class="btn btn-primary">Registra</button></center> 
        </form>
        <center>
            <font face="Algerian" color="black" size="2">
              Ingresa word-Nombre-:
            <br>
            <input type="text" name="Nombre" size="20" maxlength="20">
            <br><br>
            Ingresa dateCreated-Fecha-:
            <br>
            <input type="text" name="fecha del contacto" maxlength="60" size="60">
            <br><br>
            </font>
            </div> 
            <hr width="100%" size="5">
            </center>
               <!-- boton de cambio-->
          <center><button type="submit" class="btn btn-primary">Registra</button></center> 
            </div> 
            <hr width="70%" size="5">
            </center>
    <!-- Modal para modificar   -->
    <div id="modalApi" class="modal fade" tabindex="-1" aria-labelledby="modalApi" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-footer">
            <div class="modal-header bg-primary text-white">
              <h4 class="modal-title" id="exampleModalLabel">modificar</h4>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/modificar" method="POST">
                  <input name="id_modificar" id="id_modificar" type="text" hidden>
                <div class="mb-3">
                  <label for="nombre_modificar" class="col-form-label">word:</label>
                  <input id="nombre_modificar" name="nombre_modificar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                  <label for="edad_modificar" class="col-form-label">dateCreated:</label>
                  <input id="edad_modificar" name="fecha_modificar" type="number" class="form-control" value="">
                </div>
            </div>
            <!-- Boton actualizar en la modificacion    -->
            <div class="modal-footer">              
              <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
          </form>
          </div>
        </div>
    </div>
    <!--  Bootstrap  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
  </body>
</html>